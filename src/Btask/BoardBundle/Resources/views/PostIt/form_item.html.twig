<form  class="item" action="{{ actionUrl }}" method="post" {{ form_enctype(form) }}>
	{{ form_errors(form.subject) }}
    {{ form_widget(form.subject) }}
    <div class="panel">
    <div class="bound"></div>
	<div class="tabs">
	    <a href="task" class="left active">post-it / tâche</a>
    	<a href="note" class="right">note</a>
    	<div class="clr"></div>
    </div>
	{{ form_errors(form) }}



