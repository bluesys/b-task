<div class="task accordion-group" data-id="{{ task.id }}">
	<div class="meta accordion-heading">
		<em class="duedate">{{ task.due | date('F dS Y') }}</em>
		<a href="{{ path('BtaskBoardBundle_task_udpate', { 'id': task.id }) }}" class="edit action">edit task</a>
		<h5>{{ task.subject }}</h5>
	    {% if task.status == true %}
		<a style="background-color: {{ task.project.color }}" href="{{ path('BtaskBoardBundle_task_close', { 'id': task.id }) }}" class="btn close action"></a>
		{% else %}
		<a style="background-color: {{ task.project.color }}" href="{{ path('BtaskBoardBundle_task_open', { 'id': task.id }) }}" class="btn reopen action"></a>
		{% endif %}
		<a class="underling" href="#">geoffroy.perriard@gmail.com</a>
		<a class="accordion-toggle" data-toggle="collapse" data-parent="#tasks" href="#task-{{ task.id }}">Collapse</a>
	</div>
	<div id="task-{{ task.id }}" class="accordion-body collapse">
		<div class="accordion-inner">
			{{ task.detail }}
		</div>
	</div>
</div>
